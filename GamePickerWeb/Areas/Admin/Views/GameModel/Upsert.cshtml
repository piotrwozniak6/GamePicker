@model GameModelVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.GameModel.Id!=0?"Update":"New") GameModel</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <div class="border p-3">
                <div class="mb-3 row">
                    <label asp-for="GameModel.Title"></label>
                    <input asp-for="GameModel.Title" class="form-control">
                    <span asp-validation-for="GameModel.Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.Description"></label>
                    <textarea asp-for="GameModel.Description" class="form-control"></textarea>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.Publisher"></label>
                    <input asp-for="GameModel.Publisher" class="form-control">
                    <span asp-validation-for="GameModel.Publisher" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.RegularPrice"></label>
                    <input asp-for="GameModel.RegularPrice" class="form-control">
                    <span asp-validation-for="GameModel.RegularPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.Price"></label>
                    <input asp-for="GameModel.Price" class="form-control">
                    <span asp-validation-for="GameModel.Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.Price50"></label>
                    <input asp-for="GameModel.Price50" class="form-control">
                    <span asp-validation-for="GameModel.Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.Price100"></label>
                    <input asp-for="GameModel.Price100" class="form-control">
                    <span asp-validation-for="GameModel.Price100" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.CategoryId"></label>
                    <select asp-for="GameModel.CategoryId" asp-items="@Model.Categories" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="GameModel.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="GameModel.ImageUrl"></label>
                    <input type="file" class="form-control"/>
                </div>
                <div class="row">
                    <div class="col-3">
                        @if (Model.GameModel.Id != 0)
                        {
                            <button type="submit" class="btn btn-outline-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-outline-primary form-control">Create</button>
                        }
                    </div>
                    <div class="col-3">
                        <a asp-controller="GameModel" asp-action="Index" class="btn btn-secondary form-control">
                            Return
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
      tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
      });
    </script>
    @{
        <partial Title="_ValidationScriptsPartial"/>
    }
}