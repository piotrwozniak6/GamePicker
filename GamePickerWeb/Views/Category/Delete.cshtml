@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="mb-3 row">
            <label asp-for="Order"></label>
            <input asp-for="Order" disabled class="form-control">
        </div>
        <div class="row">
            <div class="col-3">
                <button type="submit" class="btn btn-outline-primary form-control">Delete</button>
            </div>
            <div class="col-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Return
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
