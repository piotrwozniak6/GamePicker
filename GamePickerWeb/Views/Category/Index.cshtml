@model List<Category>

<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2 class="text-dark">
                Categories
            </h2>        
        </div>     
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-lg"></i> New Category
            </a>
        </div>      
    </div>
    
    <table class="table table-info table-striped">
        <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Order
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.OrderBy(u => u.Order))
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @item.Order
                </td>
                <td> 
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash3"></i> Delete 
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>